## Bash Aliases
alias vim='nvim'
alias vi='vim'

#alias vifm='vifmrun'
alias sai='sudo apt install'
alias sainir='sudo apt install --no-install-recommends'
alias grep='grep --color=auto'
alias egrep='egrep --color=auto'
alias fgrep='fgrep --color=auto'
alias ll='ls -l'
alias la='ls -A'
alias ls.='ls -A | egrep "^\."'
alias merge='xrdb -merge ~/.Xresources'
alias bsh='. ~/.bashrc'
alias ..='cd ..'
alias q='exit'
alias h='cd ~/'
alias c='clear'
alias C='cd ~/.config'
alias d='cd ~/dl'
alias D='cd ~/dox'
alias e='cd /etc'
alias dmr='dmenu_run'
alias vdwm='cd ~/.local/src/dwm && nvim config.def.h'
alias vst='cd ~/.local/src/st && nvim config.def.h'
alias dangit='sudo "$BASH" -c "$(history -p !!)"'  # eqivalent to sudo !!
alias pk='sudo pkill'
alias bashrc='nvim ~/.bashrc'
alias svgpng='inkscape --export-type"png"'
