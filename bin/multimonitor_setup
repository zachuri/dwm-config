#!/bin/sh

xrandr \
--output DP-0 --rotate normal --mode 1920x1080 --rate 239.96 --primary \
--output DP-2 --rotate right --right-of DP-0 --mode 1920x1080 --rate 144.00 \
--output HDMI-0 --rotate left --left-of DP-0 --mode 1920x1080 --rate 144.00 \
--output DVI-D-0 --rotate normal --above DP-0 --mode 2560x1080 --rate 60.00 \
--output DP-3 --off
